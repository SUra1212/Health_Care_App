<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@color/registerbg">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:layout_marginEnd="1dp"
        android:alpha="0.8"
        android:background="@drawable/logindash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageloginlogo"
        android:layout_width="207dp"
        android:layout_height="132dp"
        android:layout_marginEnd="212dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

        <TextView
            android:id="@+id/text"
            android:layout_width="324dp"
            android:layout_height="66dp"
            android:layout_below="@+id/imageloginlogo"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:text="Let's get started!"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="324dp"
            android:layout_height="66dp"
            android:layout_below="@+id/imageloginlogo"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="56dp"
            android:backgroundTint="@color/white"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="290dp"
            android:layout_height="44dp"
            android:layout_below="@+id/imageloginlogo"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="93dp"
            android:backgroundTint="@color/white"
            android:text="Welcome to Suwa Arana"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <EditText
            android:id="@+id/email_regLogin"
            android:layout_width="311dp"
            android:layout_height="48dp"
            android:layout_below="@+id/tv_login"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_shape"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/email_pasLogin"
            android:layout_width="311dp"
            android:layout_height="48dp"
            android:layout_below="@+id/email_regLogin"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_shape"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_regLogin" />

        <Button
            android:id="@+id/btn_h4"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="570dp"
            android:backgroundTint="@color/teal_200"
            android:text="Sign In"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_pasLogin" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="158dp"
            android:layout_height="58dp"
            android:layout_below="@+id/text3"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-2dp"
            android:text="@string/tv_login1"
            android:textColor="@color/purple_700"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <RelativeLayout
            android:layout_width="297dp"
            android:layout_height="46dp"
            android:layout_below="@+id/email_pasLogin"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="19dp"

            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/googlesignin1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/google" />


            <TextView
                android:id="@+id/googlesignin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="7dp"
                android:text="Sign in with google"
                android:textColor="#000000"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="620dp"
            android:text="Not Registerd Yet? Sign Up"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_h4" />




    </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>